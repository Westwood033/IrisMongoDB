<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
         
         <div class="card shadow-sm mb-5">
                <div class="card-body">

                    <h4 class="card-title mb-4 text-center">
                        Entraîner le model
                    </h4>

                        <div class="d-grid">
                            <button onclick="trainModel()" class="btn btn-primary">
                                Entraîner
                            </button>
                        </div>

                        <div class="alert alert-success mt-4 text-center d-none" id="trainAlert">
                            <p id="resultTrain"></p>
                        </div>
            </div>
            </div>

            <div class="card shadow-sm mt-5">
                <div class="card-body">

                    <h4 class="card-title mb-4 text-center">
                        Trouver la fleur
                    </h4>

                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                        <div class="mb-3">
                            {{ form_label(form.sepalLengthCm, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.sepalLengthCm, {'attr': {'class': 'form-control'}}) }}
                            
                            {{ form_label(form.sepalWidthCm, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.sepalWidthCm, {'attr': {'class': 'form-control'}}) }}
                            
                            {{ form_label(form.petalLengthCm, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.petalLengthCm, {'attr': {'class': 'form-control'}}) }}
                            
                            {{ form_label(form.petalWidthCm, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.petalWidthCm, {'attr': {'class': 'form-control'}}) }}

                            {{ form_errors(form.sepalLengthCm) }}
                            {{ form_errors(form.sepalWidthCm) }}
                            {{ form_errors(form.petalLengthCm) }}
                            {{ form_errors(form.petalWidthCm) }}
                            
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                Trouver ma fleur
                            </button>
                        </div>

                    {{ form_end(form) }}

                    {% if result %}
                        <div class="alert alert-success mt-4 text-center">
                            ✅ {{result}}
                        </div>
                    {% endif %}
            </div>


            </div>
             <div class="w-100 d-flex flex-row justify-content-start mt-5">
                <a href="{{ path('app_default') }}" class="btn btn-primary">Remplir la base de donnée</a>
            </div>
        </div>
    </div>
</div>

<script>
function trainModel() {
    fetch("{{ path('app_train') }}", {
        method: "POST",
        headers: {
            "X-Requested-With": "XMLHttpRequest"
        }
    })
    .then(response => {
        if (!response.ok) {
            throw new Error("Erreur serveur");
        }
        return response.text();
    })
    .then(data => {
        document.getElementById("resultTrain").textContent = data;
        document.getElementById("trainAlert").classList.remove("d-none");
    })
    .catch(error => {
        document.getElementById("resultTrain").textContent = "❌ Erreur lors de l'entraînement";
        document.getElementById("trainAlert").classList.remove("d-none");
    });
}
</script>