<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
         <div class="card shadow-sm mb-5">
         <div class="card-body">

                    <h4 class="card-title mb-4 text-center">
                        Vider la base de donnée
                    </h4>

                        <div class="d-grid">
                            <button onclick="dropModel()" class="btn btn-primary">
                                Vider
                            </button>
                        </div>

                        <div class="alert alert-success mt-4 text-center d-none" id="dropAlert">
                            <p id="resultDrop"></p>
                        </div>
            </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">

                    <h4 class="card-title mb-4 text-center">
                        Importer un fichier
                    </h4>

                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                        <div class="mb-3">
                            {{ form_label(form.file, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.file) }}
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                Remplir la base
                            </button>
                        </div>

                    {{ form_end(form) }}

                    {% if result %}
                        <div class="alert alert-success mt-4 text-center">
                            ✅ {{result}}
                        </div>
                    {% endif %}
            </div>


            </div>
             <div class="w-100 d-flex flex-row justify-content-end mt-5">
                <a href="{{ path('app_test') }}"  class="btn btn-primary">Entraîner et tester</a>
            </div>
        </div>
    </div>
</div>

<script>
function dropModel() {
    fetch("{{ path('app_delete') }}", {
        method: "POST",
        headers: {
            "X-Requested-With": "XMLHttpRequest"
        }
    })
    .then(response => {
        if (!response.ok) {
            throw new Error("Erreur serveur");
        }
        return response.text();
    })
    .then(data => {
        document.getElementById("resultDrop").textContent = data;
        document.getElementById("dropAlert").classList.remove("d-none");
    })
    .catch(error => {
        document.getElementById("resultDrop").textContent = "❌ Erreur lors de l'entraînement";
        document.getElementById("dropAlert").classList.remove("d-none");
    });
}
</script>